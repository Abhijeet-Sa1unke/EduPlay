<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Teacher Login | EduPlay</title>
  <link rel="stylesheet" href="/styles/logincard_teacher_css.css"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"/>
</head>
<body>
  <div class="main_card">
    <div class="card">

      <!-- (Optional) Left Image Section -->
      <div class="image">
        <img src="/images/teacher-login.png" alt="Teacher Login"/>
      </div>

      <!-- Right Side (Forms) -->
      <div class="rightside">
        
        <!-- Teacher Login Form -->
        <form id="loginForm" action="/teacher/login" method="POST">
          <h1>Teacher Login</h1>

          <% if (teacherError && teacherError.length > 0) { %>
  <div class="error"><%= teacherError %></div>
<% } %>
<% if (teacherSuccess && teacherSuccess.length > 0) { %>
  <div class="success"><%= teacherSuccess %></div>
<% } %>


          <div class="underline">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required />
          </div>

          <div class="underline">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required />
          </div>

          <div class="extraopt">
            <label><input type="checkbox"/> Remember me</label>
            <a href="#">Forgot Password?</a>
          </div>

          <button type="submit" class="primary-btn">Log In</button>

          <p class="divider">or</p>

          <div class="social-buttons">
  <a href="/auth/google/teacher" id="googleb">
    <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google"/> Google
  </a>
  <a href="/auth/facebook/teacher" id="fbb">Facebook</a>
</div>


          <p class="signup-text">
            Not a member yet? <a href="#" onclick="toggleForms('signup')">Sign Up!</a>
          </p>
        </form>

        <!-- Teacher Signup Form -->
        <form id="signupForm" action="/teacher/signup" method="POST" style="display:none;">
          <h1>Teacher Signup</h1>

          <div class="underline">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" placeholder="Enter your full name" required />
          </div>

          <div class="underline">
            <label for="signupEmail">Email</label>
            <input type="email" id="signupEmail" name="email" placeholder="Enter your email" required />
          </div>

          <div class="underline">
            <label for="signupPassword">Password</label>
            <input type="password" id="signupPassword" name="password" placeholder="Create password" required />
          </div>

          <button type="submit" class="primary-btn">Sign Up</button>

          <p class="signup-text">
            Already have an account? <a href="#" onclick="toggleForms('login')">Log In</a>
          </p>
        </form>

      </div> <!-- End Right Side -->

    </div>
  </div>

  <script>
    // Toggle login and signup forms
    function toggleForms(form) {
      const loginForm = document.getElementById("loginForm");
      const signupForm = document.getElementById("signupForm");

      if (form === "signup") {
        loginForm.style.display = "none";
        signupForm.style.display = "block";
      } else {
        loginForm.style.display = "block";
        signupForm.style.display = "none";
      }
    }
  </script>
</body>
</html>
